rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to resources collection for all users
    match /resources/{document} {
      allow read: if true;
      allow write: if false; // Only allow reads, no writes for now
    }
    
    // Default rule - deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
